{% extends 'base.html.twig' %}

{% block body %}
  <h1>{{ licensor.name }} Catalog Association</h1>

  <form method="POST">
    <button type="submit">Save</button>
    <table>
      <tr>
        <th>AniDB ID</th>
        <th>SKU</th>
        <th>Title</th>
        <th>Work</th>
      </tr>

      {% for product in products %}
        <tr>
          <td><input type="text" name="products[{{ product.id }}]" /></td>
          <td>{{ product.sku }}</td>
          <td>{{ product.title }}</td>
          <td>
            {% if product.work %}
              {{ product.work.id }}
              &mdash; {{ product.work.title }}
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </table>

    <button type="submit">Save</button>
  </form>
{% endblock %}

