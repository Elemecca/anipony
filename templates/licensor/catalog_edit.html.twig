{% extends 'base.html.twig' %}

{% block body %}
  <h1>{{ licensor.name }} Catalog Association</h1>

  <form method="POST">
    <button class="btn btn-primary" type="submit">Save</button>

    <table class="table table-striped table-sm table-hover">
      <thead>
        <tr>
          <th>SKU</th>
          <th>Title</th>
          <th>AniDB ID</th>
          <th>Work</th>
        </tr>
      </thead>

      {% for product in products %}
        <tr>
          <td>{{ product.sku }}</td>
          <td>{{ product.title }}</td>
          <td><input type="text" name="products[{{ product.id }}]" /></td>
          <td>
            {% for work in product.works %}
              {{ work.id }} &mdash; {{ work.title }}<br>
            {% endfor %}
          </td>
        </tr>
      {% endfor %}
    </table>

    <button class="btn btn-primary" type="submit">Save</button>
  </form>
{% endblock %}

